@model NereyeBasvurdumProject.Models.Basvurularim

@{
    ViewData["Title"] = "Başvuru Düzenle";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <!-- Başlık -->
            <div class="text-center mb-4">
                <h2 class="text-warning">
                    <i class="fas fa-edit me-2"></i>Başvuru Düzenle
                </h2>
                <p class="text-muted">@Model.Sirket - @Model.Pozisyon başvurunuzu güncelleyin</p>
            </div>

            <!-- Form Kartı -->
            <div class="card shadow-lg border-0">
                <div class="card-header bg-warning text-dark py-4">
                    <h5 class="mb-0 text-center">
                        <i class="fas fa-pen me-2"></i>Başvuru Güncelleme Formu
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" id="editForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="Id" />
                        
                        <!-- Şirket ve Pozisyon -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Sirket" class="form-control" id="sirket" placeholder="Şirket Adı" />
                                    <label for="sirket">
                                        <i class="fas fa-building me-2"></i>Şirket Adı *
                                    </label>
                                    <span asp-validation-for="Sirket" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Pozisyon" class="form-control" id="pozisyon" placeholder="Pozisyon" />
                                    <label for="pozisyon">
                                        <i class="fas fa-user-tie me-2"></i>Pozisyon *
                                    </label>
                                    <span asp-validation-for="Pozisyon" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Lokasyon ve Deneyim -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Lokasyon" class="form-control" id="lokasyon" placeholder="Lokasyon" />
                                    <label for="lokasyon">
                                        <i class="fas fa-map-marker-alt me-2"></i>Lokasyon
                                    </label>
                                    <span asp-validation-for="Lokasyon" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="Deneyim" class="form-select" id="deneyim">
                                        <option value="">Deneyim Seviyesini Seçin</option>
                                        <option value="Yeni Mezun">Yeni Mezun</option>
                                        <option value="0-2 Yıl">0-2 Yıl</option>
                                        <option value="2-5 Yıl">2-5 Yıl</option>
                                        <option value="5-10 Yıl">5-10 Yıl</option>
                                        <option value="10+ Yıl">10+ Yıl</option>
                                    </select>
                                    <label for="deneyim">
                                        <i class="fas fa-chart-line me-2"></i>Deneyim Seviyesi
                                    </label>
                                    <span asp-validation-for="Deneyim" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Başvuru Aracı ve Tarih -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="Araci" class="form-select" id="araci">
                                        <option value="">Başvuru Aracını Seçin</option>
                                        <option value="Kariyer.net">Kariyer.net</option>
                                        <option value="LinkedIn">LinkedIn</option>
                                        <option value="Yenibiris.com">Yenibiris.com</option>
                                        <option value="İşkur">İşkur</option>
                                        <option value="Şirket Websitesi">Şirket Websitesi</option>
                                        <option value="Referans">Referans</option>
                                        <option value="E-posta">E-posta</option>
                                        <option value="Diğer">Diğer</option>
                                    </select>
                                    <label for="araci">
                                        <i class="fas fa-globe me-2"></i>Başvuru Aracı
                                    </label>
                                    <span asp-validation-for="Araci" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="BasvuruTarihi" class="form-control" type="date" id="basvuruTarihi" />
                                    <label for="basvuruTarihi">
                                        <i class="fas fa-calendar me-2"></i>Başvuru Tarihi *
                                    </label>
                                    <span asp-validation-for="BasvuruTarihi" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Durum -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="form-floating">
                                    <select asp-for="Durum" class="form-select" id="durum">
                                        <option value="Beklemede">Beklemede</option>
                                        <option value="İnceleniyor">İnceleniyor</option>
                                        <option value="Mülakat">Mülakat</option>
                                        <option value="Kabul">Kabul</option>
                                        <option value="Red">Red</option>
                                    </select>
                                    <label for="durum">
                                        <i class="fas fa-info-circle me-2"></i>Başvuru Durumu
                                    </label>
                                    <span asp-validation-for="Durum" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Durum değişiklik uyarısı -->
                        <div class="alert alert-info d-none" id="durumUyari">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Bilgi:</strong> Durum değişikliği başvuru takibinizi etkileyebilir.
                        </div>
                        
                        <!-- Butonlar -->
                        <div class="row">
                            <div class="col-12">
                                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg me-md-2">
                                        <i class="fas fa-arrow-left me-2"></i>Geri Dön
                                    </a>
                                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info btn-lg me-md-2">
                                        <i class="fas fa-eye me-2"></i>Detaylar
                                    </a>
                                    <button type="submit" class="btn btn-warning btn-lg px-4">
                                        <i class="fas fa-save me-2"></i>Değişiklikleri Kaydet
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Güncelleme Bilgisi -->
            <div class="card mt-4 border-warning">
                <div class="card-body bg-light">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x text-warning"></i>
                        </div>
                        <div class="col">
                            <h6 class="mb-1">⏰ Son Güncelleme</h6>
                            <small class="text-muted">
                                Bu başvuru @Model.BasvuruTarihi.ToString("dd MMMM yyyy") tarihinde oluşturuldu.
                                Değişiklikleriniz anında kaydedilecektir.
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Orijinal durum değeri
        const originalDurum = '@Model.Durum';
        
        // Durum değişikliği kontrolü
        document.getElementById('durum').addEventListener('change', function() {
            const uyariDiv = document.getElementById('durumUyari');
            if (this.value !== originalDurum) {
                uyariDiv.classList.remove('d-none');
            } else {
                uyariDiv.classList.add('d-none');
            }
        });

        // Form gönderme onayı
        document.getElementById('editForm').addEventListener('submit', function(e) {
            const sirket = document.getElementById('sirket').value;
            const pozisyon = document.getElementById('pozisyon').value;
            
            if (!sirket || !pozisyon) {
                e.preventDefault();
                alert('Şirket adı ve pozisyon alanları zorunludur!');
                return;
            }

            // Durum değişmişse onay iste
            const currentDurum = document.getElementById('durum').value;
            if (currentDurum !== originalDurum) {
                if (!confirm(`Başvuru durumunu "${originalDurum}" iken "${currentDurum}" olarak değiştirmek istediğinizden emin misiniz?`)) {
                    e.preventDefault();
                }
            }
        });
    </script>
}
